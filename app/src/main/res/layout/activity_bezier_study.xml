<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/secondBezierTest"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        style="@style/ButtonStyle"
        android:text="二阶Bezier曲线"/>

    <Button
        android:id="@+id/thirdBezierTest"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        style="@style/ButtonStyle"
        android:text="三阶Bezier曲线"/>

    <Button
        android:id="@+id/drawPadBezierTest"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        style="@style/ButtonStyle"
        android:text="两点连线的圆滑处理"/>

    <Button
        android:id="@+id/pathMorthingBezierTest"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        style="@style/ButtonStyle"
        android:text="路径变换动画"/>

    <Button
        android:id="@+id/waveBezierTest"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        style="@style/ButtonStyle"
        android:text="波浪效果"/>

    <Button
        android:id="@+id/pathBezierTest"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        style="@style/ButtonStyle"
        android:text="轨迹动画"/>

</LinearLayout>
